{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C++ (same folder I/O)",
      "type": "shell",
      "command": "g++",
      "args": [
        "${file}",
        "-o",
        "${fileDirname}/main"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run with input/output redirection (same folder)",
      "type": "shell",
      "dependsOn": "Build C++ (same folder I/O)",
      "command": "./main < input.txt > output.txt",
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}